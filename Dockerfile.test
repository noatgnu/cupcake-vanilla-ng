FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies for integration testing
RUN apk add --no-cache \
    curl \
    wget \
    ca-certificates

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production=false

# Copy source code
COPY . .

# Build libraries first
RUN npm run build:libs

# Create directories for test results
RUN mkdir -p integration-test-results coverage

# Set environment for testing
ENV NODE_ENV=test
ENV TEST_TIMEOUT=30000

# Default command
CMD ["npm", "run", "test:integration:coverage"]