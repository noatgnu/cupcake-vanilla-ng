{
  "name": "cupcake-vanilla-ng",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run build:libs && ng serve",
    "build": "ng build",
    "build:libs": "ng build cupcake-core",
    "build:all": "./build-all.sh",
    "build:core": "ng build cupcake-core",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:integration": "jest --config integration-test.config.json --runInBand --detectOpenHandles",
    "test:integration:coverage": "jest --config integration-test.config.json --runInBand --coverage --detectOpenHandles",
    "test:integration:watch": "jest --config integration-test.config.json --runInBand --watch",
    "test:integration:report": "jest --config integration-test.config.json --runInBand --reporters=default --reporters=jest-junit --outputFile=integration-test-results/junit.xml",
    "test:full-backend": "./full-backend-integration-test.sh"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.1.6",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@ng-bootstrap/ng-bootstrap": "^19.0.1",
    "@popperjs/core": "^2.11.8",
    "@types/jssha": "^2.0.0",
    "bootstrap": "^5.3.6",
    "bootstrap-icons": "^1.13.1",
    "jssha": "^3.3.1",
    "ngx-color": "^10.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.0",
    "@angular/localize": "^20.1.0",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^30.0.0",
    "@types/node-fetch": "^2.6.13",
    "jasmine-core": "~5.8.0",
    "jest": "^30.1.3",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.1.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.4.1",
    "typescript": "~5.8.2"
  }
}
